/* pages/Release/Release.wxss */

page {
  background-color: #fff;
}

.indextop {
  left: 0;
  right: 0;
  top: 0;
  z-index: 8000;
  height: 46px;
  background-color: rgb(238, 238, 238);
}

.GroupManagement {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 40rpx 0 0 40rpx;
}
.DiyNav2 {
  box-sizing: content-box;
  padding-bottom: 20rpx;
  overflow: hidden;
  left: 0;
  right: 0;
  top: 0;
  height: 35px;
  padding-top: 30px;
  background-color: #fff;
  font-size: 18px;
  z-index: 1;
}

.groupChose {
  margin-left: 50rpx;
}

.memberList {
  background-color: #fff;
}

.memberMess {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgb(223, 220, 220);
}

.memberImg image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 16rpx 0 0 16rpx;
}

.memberMessItem {
  font-size: 28rpx;
}

.memberName {
  margin: 22rpx 0 0 16rpx;
}

.memberAddTime {
  margin-left: 16rpx;
  color: #999;
}

.adminPosition {
  margin: 46rpx 0 0 160rpx;
  font-size: 32rpx;
}

.choseAdminPosition {
  color: rgb(105, 193, 196);
}

.classCode {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 0 40rpx;
  border-top: 1px solid #666;
}

.codeNum {
  margin-left: 16rpx;
}

.updateCode {
  margin-left: 300rpx;
  font-size: 32rpx;
  color: rgb(238, 138, 138);
}

.choseUpdateCode {
  color: rgb(105, 193, 196);
}

.noneUser {
  margin-top: 420rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 550rpx;
  height: 380rpx;
  position: fixed;
  top: 30%;
  z-index: 9999;
  margin: 0rpx 100rpx 185rpx 100rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nowCode {
  display: flex;
  flex-direction: row;
  margin: 30rpx 0 0 160rpx;
  width: 590rpx;
}

.nowCodeNum {
  margin-left: 20rpx;
}

.updateNowCode {
  border: 1px solid red;
}

.nowCodeBtn {
  display: flex;
  flex-direction: row;
}
.codeBtn{
  width: 275rpx;
  height: 66rpx;
  border-top: 1px solid rgb(218, 218, 218);
  text-align: center;
  margin-top: 80rpx;
  padding-top: 16rpx;
}
.cancel {
  border-right: 1px solid  rgb(218, 218, 218);
}

.sure {
  color: rgb(34, 103, 207)
}
