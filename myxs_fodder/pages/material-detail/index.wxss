.page {
  background-color: #ecf0f1;
}
.material-detail-material {
  padding: 20rpx;
  padding-top: 0;
  border-top: 1px solid #ecf0f1;
  background-color: white;
  margin-bottom: 15rpx;
}
.material-detail-material-content text{
  margin-bottom: 20rpx;
  display: block;  
}
.material-detail-material-content image {
  width: 100%;
  height: 350rpx;
}
.material-detail-material-content view {
  margin-top: 20rpx;
  font-size: .8rem;
  color: #bdc3c7;
}
.material-detail-circle {
  background-color: white;
  margin-bottom: 15rpx;
}
.material-detail-circle-title {
  padding: 20rpx;
  font-weight: 550;
  border-bottom: 1px solid #ecf0f1;
}
.material-detail-circle-content {
  display: flex;
  padding: 20rpx;
}
.material-detail-circle-content image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 14rpx;
}
.material-detail-circle-center {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.material-detail-circle-center-top {
  font-weight: 550;
  font-size: .9rem;
}
.material-detail-circle-center-bottom {
  font-size: .8rem;
  color: #95a5a6;
}
.material-detail-circle-btn {
  padding: 3rpx 30rpx;
  color: rgb(255,145,183);
  border: 1px solid;
  border-radius: 30rpx;
  height: 100%;
  font-size: .9rem;
  font-weight: 550;
  margin-left: auto;
  align-self: center;  
}
.material-detail-comment {
  height: 100%;
  background-color: white;
}
.material-detail-comment-title {
  padding: 20rpx;
  font-weight: 550;
  border-bottom: 1px solid #ecf0f1;
}

.index-list-img {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.index-list-img image {
  width: 30%;
  padding: 5rpx;
}