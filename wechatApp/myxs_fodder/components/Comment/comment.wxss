/* myxs_fodder/components/Comment/comment.wxss */
.comment-container {
  position: fixed;
  bottom: 0;
  background-color: white;
  z-index: 3;
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  height: 65vh;
  transition: .4s all;
}
.comment-hidden {
  transform: translateY(65vh);
}
.comment-icon-like {
  margin-right: 20rpx;
  margin-left: auto;
  color: #bdc3c7;
}
.comment-icon-like .like-num {
  font-size: 26rpx;
  margin-right: 10rpx;
}
.solids-top::after {
  border: none;
}
.comment-content {
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 110rpx;
}
.comment-close-btn {
  position: absolute;
  right: 20rpx;
}
.comment-header {
  text-align: center;
  padding: 10rpx 0;
  font-size: 1.2rem;
}
.comment-footer {
  height: 100rpx;
  width: 100%;
  bottom: 0;
  position: absolute;
  background-color: white;
  padding: 17rpx;
  border-top: 1px solid #ecf0f1;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;

}
.comment-input {
  width: 80%;
  background-color: #ecf0f1;
  border-radius: 5px;
  height: 100%;
  text-indent: 10px;
}
.comment-footer .btn {
  display: inline-box;
  width: 20%;
  font-size: 22rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

}
.comment-load-more {
  color: #3498db;
  font-size: 23rpx;
  background: none;
  width: 100%;
  text-align: left;
  margin-left: 10rpx;
}
.comment-load-more::after {
  border: none;
}
.no-comment {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80%;

}
.comment-parentLoadEnd {
  text-align: center;
  font-size: 23rpx;
  color: #8799a3;
}
.comment-container-detail {
  position: relative;
  height: 100%;
}
.comment-footer-detail {
  position: fixed;
}


