.page {
  height: 100vh;
  overflow: hidden;
}
.detail-header {
  position: relative;
  width: 100%;
  
  color: white;
  padding: 30rpx;
  padding-bottom: 127rpx;
  box-sizing: border-box;
}
.detail-header-imgcover {
  position: absolute;
  width: 100%;
  height: 500rpx;
  transform: scale(1.05);
  filter: blur(2.5px);
  z-index: -2;
  top: 0;
  left: 0;
}
.detail-header::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  background: black;
  opacity: .3;
  z-index: -1;
  background-size: cover;
  width: 100%;
  height: 500rpx;
}
.detail-header-row1 {
  display: flex;
}
.detail-header-row1 image {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid;
  border-radius: 15rpx;
}
.detail-header-row1-right {
  margin-left: 20rpx;
}
.detail-header-row1-right-title {
  font-weight: 550;
  margin-bottom: 10rpx;
}
.detail-header-row1-right-tags {
  font-size: .8rem;
  color: rgba(255,255,255, .9);
}
.detail-header-row1-right-tags-line {
  margin: 0 20rpx;
}
.detail-header-row2 {
  margin: 20rpx 0;
  font-size: .8rem;
  line-height: 45rpx;
}
.detail-header-row3 {
  display: flex;
  font-size: .7rem;
}
.circle-tag {
  padding: 4rpx 20rpx;
  background-color: rgba(189, 195, 199,.3);
  border-radius: 100rpx;
}
.detail-tab-list {
  border-top-right-radius: 40rpx;
  border-top-left-radius: 40rpx;
}
.detail-tab-list text {
  margin: 11px 33px;
  position: relative;
}
.detail-tab-list text::before{
  content: '';
  position: absolute;
  height: 8rpx;
  width: 100%;
  bottom: -25rpx;
  left: 0;
  background-color: rgb(255,97,112);
  border-radius: 10rpx;  
}
.detail-footer {
  position: relative;
  height: 100%;
  margin-top: -29px;
}
.margin-left-10 {
  margin-left: 20rpx;
}
.detail-back {
  margin: 20rpx 0;
}
.detail-footer-content {
  border-top: 1px solid #ecf0f1;
  z-index: 1;
  position: relative;
}
.text-cu {
  color: rgb(255,97,112);
}
.detail-btn-toGroup {
  
  top: 294rpx;
  right: 0;
  padding: 0 20rpx;
  border-radius: 36rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  position: fixed;
  background-color: #95a5a6;
  width: 112rpx;
  color: white;
  z-index: 1;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.detail-btn-weixin {
  top: 185rpx;
}
.text-cu {
  border-bottom: 7rpx solid;
}
.detail-cover {
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-color: black;
  opacity: .7;
  z-index: 1;
}